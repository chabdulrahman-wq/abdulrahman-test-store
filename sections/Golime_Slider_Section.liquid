      padding-right: 10px;
  }

  .Golime_slider_home_pare_links_para_text p {
      margin: 0;
      text-align: center;
      font-size: 20px;
      letter-spacing: 0;
      line-height: 0;
      color: #70BC0E;
  }

  .Golime_slider_home_pare_links_para_text span {
      color: #F6AE02;
  }

  i.fa-solid.fa-chevron-right{
      color: #70BC0E;
      font-size: 20px;
      line-height: 0;
      margin-top: 17px;
  }

  .Golime_Slider_item {
      display: flex
  ;
      justify-content: center;
  }

  .Golime_Slider_item_block_box {
      border-radius: 20px;
      padding: 40px 38.3px;
      border: 1px solid #949494;
      display: flex
  ;
      flex-direction: column;
      min-height: 330px;
  }

  .Golime_Slider_item_block_box_contnt {
      display: flex
  ;
      justify-content: space-between;
