      padding: 50px 0;
  }

  .Golime_slider_home_pare_container {
      max-width: 1337px;
      padding: 0 50px;
      margin: 0 auto;
  }

  .Golime_slider_home_pare_Title_h2 {
      text-align: center;
      color: rgb(60, 64, 67);
      font-size: 40px;
      line-height: 40px;
      letter-spacing: 0px;
      margin: 0px;
  }

  .Golime_slider_home_pare_desp {
      padding: 20px 0;
      margin: 0 auto;
  }
  .Golime_slider_home_pare_desp p {

  text-align: center;
      margin: 0 auto;
      color: #3C4043;
      font-weight: 400;
      letter-spacing: 0;
      line-height: 26px;
      display: block;
      font-size: 20px;
  }

  .Golime_slider_home_pare_links {
