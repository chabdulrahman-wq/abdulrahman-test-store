    "id": "main_Golime_Slider_item_block_box_images_star_img",
    "label": "Slider Star"
    },
    {
    "type": "richtext",
    "id": "main_Golime_Slider_item_block_box_para_golime",
    "label": "Slider Para2"
    }
    ]
    }
  ],
  "presets": [
    {
    "name": "Golime Slider Section"
    }
  ]
}
{% endschema %}
