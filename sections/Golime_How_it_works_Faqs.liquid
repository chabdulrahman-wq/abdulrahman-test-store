<style>
    .Golime_How_It_Works {
        padding: 25px 0 40px;
    }

    .Golime_How_It_Works_FAQs_container {
        max-width: 1034px;
        width: 100%;
        padding: 0 50px;
        margin: 0 auto;
    }

    .Golime_How_It_Works_left_Box_images {
        max-width: 52px;
        margin: 0 auto;
    }

    .Golime_How_It_Works_left_Box_images_img {
        width: 100%;
        height: 100%;
    }

    .Golime_How_It_Works_FAQs_Title_icon p {
        margin: 0;
        font-size: 20px;
        color: #70BC0E;
        font-weight: 500;
        letter-spacing: 0;
        line-height: 0px;
        transition: all .5s
    ease-in-out;
    }

    .Golime_How_It_Works_FAQs_Title {
        color: #454545;
        font-size: 40px;
        text-align: center;
        display: inline-block;
        margin: 0 auto;
        width: 100%;
        letter-spacing: 0;
        padding-bottom: 25px;
        line-height: 100%;
    }

    .Golime_How_It_Works_FAQs_icon_images_btn {
        padding-bottom: 40px;
    }

    .Golime_How_It_Works_View_All {
        text-decoration: none;
        display: flex
    ;
        justify-content: center;
        align-items: center;
    }

    .Golime_How_It_Works_FAQs_Title_icon_images {
        line-height: 0;
        max-width: 7px;
        margin-top: 1px;
    }

    .Golime_How_It_Works_FAQs_Title_icon_img {
        width: 100%;
        height: 100%;
    }

    .Golime_How_It_Works_Right_Box {
        width: 100%;
    }

    .Golime_How_It_Works_FAQ_Item {
      display: flex
    ;
        flex-wrap: wrap;
        position: relative;
        border-radius: 20px;
        margin-bottom: 16px;
        background: #F9F7F2;
        cursor: pointer;
    }

    .Golime_How_It_Works_FAQ_Question {
      width: 100%;
      background: none;
      border: none;
      outline: none;
      font-size: 16px;
      font-weight: 500;
      padding: 18px 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .Golime_How_It_Works_FAQ_Text {
     font-size: 18px;
        font-weight: 400;
        cursor: pointer;
        color: #454545;
        letter-spacing: 0;
    }

    .Golime_How_It_Works_FAQ_Answer {
      width: 100%;
      color: #454545;
      padding-top: 10px;
      display: none;
      font-size: 18px;
      line-height: 22px;
      letter-spacing: 0;
      padding: 0px 20px;
      padding-bottom: 20px;
  }

    .Golime_How_It_Works_FAQ_Icon {
      font-size: 22px;
      font-weight: 700;
      position: relative;
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .Golime_How_It_Works_FAQs_Title_icon {
        padding-right: 12px;
    }
    .Golime_How_It_Works_FAQ_Answer {
          display: none;
          padding: 0 25px 20px;
          color: #555;
          font-size: 15px;
          line-height: 1.6;
          animation: fadeIn 0.3s ease;
        }

        /* Show active answer */
        .Golime_How_It_Works_FAQ_Item.active .Golime_How_It_Works_FAQ_Answer {
          display: block;
        }

        /* Active question text */
        .Golime_How_It_Works_FAQ_Item.active .Golime_How_It_Works_FAQ_Text {
          color: #6bc04b;
          font-weight: 600;
        }

        /* Optional fade-in animation */
        @keyframes fadeIn {
          from { opacity: 0; transform: translateY(-5px); }
          to { opacity: 1; transform: translateY(0); }
        }

    .fa-solid.fa-plus {
        font-size: 13px;
        transition: transform 0.1s
    ease-in-out;
    }
    i.fa-solid.fa-minus {
        font-size: 13px;
        transition: transform 0.1s
    ease-in-out;
    }
</style>
<section class="Golime_How_It_Works">
  <div class="Golime_How_It_Works_FAQs_container">
    <div class="Golime_How_It_Works_FAQs_flex">
      <div class="Golime_How_It_Works_left_Box">
        <div class="Golime_How_It_Works_left_Box_images">
          {% if section.settings.sub_Golime_How_It_Works_left_Box_images_img != blank %}
            <img
              src="{{ section.settings.sub_Golime_How_It_Works_left_Box_images_img |img_url:'master' }}"
              alt=""
              class="Golime_How_It_Works_left_Box_images_img"
            >
          {% endif %}
        </div>
        <h2 class="Golime_How_It_Works_FAQs_Title">{{ section.settings.main_sub_Golime_How_It_Works_FAQs_Title }}</h2>
        <div class="Golime_How_It_Works_FAQs_icon_images_btn">
          <a href="{{ section.settings.main_links_Golime_How_It_Works_View_All }}" class="Golime_How_It_Works_View_All">
            <div class="Golime_How_It_Works_FAQs_Title_icon">
              <p>{{ section.settings.main_sub_para_Golime_How_It_Works_FAQs_Title_icon }}</p>
            </div>
            <div class="Golime_How_It_Works_FAQs_Title_icon_images">
              {% if section.settings.main_sub_images_Golime_How_It_Works_FAQs_Title_icon_images != blank %}
                <img
                  src="{{ section.settings.main_sub_images_Golime_How_It_Works_FAQs_Title_icon_images |img_url:'master' }}"
                  alt=""
                  class="Golime_How_It_Works_FAQs_Title_icon_img"
                >
              {% endif %}
            </div>
          </a>
        </div>
      </div>

      <div class="Golime_How_It_Works_Right_Box">
        <div class="Golime_How_It_Works_Right_Box_faqs">
          {% for block in section.blocks %}
            <div class="Golime_How_It_Works_FAQ_Item">
              <div class="Golime_How_It_Works_FAQ_Question">
                <span class="Golime_How_It_Works_FAQ_Text">{{ block.settings.main_sub_Golime_How_It_Works_FAQ_Text }}</span>
                <span class="Golime_How_It_Works_FAQ_Icon"><i class="fa-solid fa-plus"></i></span>
              </div>
              <div class="Golime_How_It_Works_FAQ_Answer">
                <p>
                  {{ block.settings.main_sub_Golime_How_It_Works_FAQ_Answer_para }}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const faqItems = document.querySelectorAll('.Golime_How_It_Works_FAQ_Item');

  faqItems.forEach((item) => {
    const div = item.querySelector('.Golime_How_It_Works_FAQ_Question');
    const icon = item.querySelector('.Golime_How_It_Works_FAQ_Icon i');

    div.addEventListener('click', () => {
      // Close all others
      faqItems.forEach((i) => {
        if (i !== item) {
          i.classList.remove('active');
          i.querySelector('.Golime_How_It_Works_FAQ_Icon i').classList.replace('fa-minus', 'fa-plus');
        }
      });

      // Toggle current
      item.classList.toggle('active');

      // Switch icon for current item
      if (item.classList.contains('active')) {
        icon.classList.replace('fa-plus', 'fa-minus');
      } else {
        icon.classList.replace('fa-minus', 'fa-plus');
      }
    });
  });
</script>
