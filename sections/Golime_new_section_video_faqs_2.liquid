<style>
    .About_Golime_Video_section_2_sc_text {
      padding: 40px 0px;
  }

  .About_Golime_Video_section_2_sc_text_continer {
      max-width: 1337px;
      padding: 0 50px;
      margin: 0 auto;
      width: 100%;
  }

  .About_Golime_Video_section_2_sc_text_flex {
      display: flex
  ;
      justify-content: space-between;
      align-items: center;
      flex-direction: row-reverse;
  }

  .About_Golime_Video_section_2_sc_text_box {
      width: 48%;
  }

  .About_Golime_Video_section_2_sc_text_video_box {
      width: 48%;
  }

  .About_Golime_Video_section_2_content_sc_text_main {
      padding: 0px 52px;
  }

  i.fa.fa-chevron-right {
      font-size: 15px;
      margin-left: 8px;
      margin-top: 2px;
      display: inline-block;
  }

  .About_Golime_Video_section_2_sc_text_video {
      position: relative;
      height: 469px;
      display: block !important;
  }

  .About_Golime_Video_section_2_vide_home_mn {
      width: 100%;
      height: 490px;
      border-radius: 24px;
      object-fit: cover;
  }

  .About_Golime_Video_section_2_sc_text_video_images_button {
      position: absolute;
      right: 20px;
      bottom: 20px;
  }

  .About_Golime_Video_section_2_sc_text_video_images_button_img {
      width: 40px;
      height: 40px;
      cursor: pointer;
  }

  .About_Golime_Video_section_2_accordion_header_text_title {
      margin: 0 0 20px;
  }

  .About_Golime_Video_section_2_accordion_header_title {
      margin: 0;
      font-size: 22px;
      color: #454545;
      line-height: 100%;
  }

  .About_Golime_Video_section_2_accordion_body p {
      font-size: 16px;
      color: #454545;
      line-height: 1.4;
      margin: 0;
  }

  .About_Golime_Video_section_2_content_title {
      font-size: 30px;
      color: #454545;
      margin: 0;
      font-weight: 700;
  }

  .About_Golime_Video_section_2_accordion_item {
      margin: 30px 0;
  }

  .About_Golime_Video_section_2_accordion_header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 10px 0;
      cursor: pointer;
  }

  .About_Golime_Video_section_2_accordion_body {
      max-height: 0;
      overflow: hidden;
      padding: 0;
      font-size: 16px;
      color: #444;
      transition: max-height 0.4s ease, padding 0.4s ease;
  }

  .About_Golime_Video_section_2_accordion_item.active .About_Golime_Video_section_2_accordion_body {
      max-height: 500px;
      padding: 0 0 16px 0;
  }

  .About_Golime_Video_section_2_icon {
      transition: transform 0.3s ease;
  }

  .About_Golime_Video_section_2_accordion_item.active .About_Golime_Video_section_2_icon {
      transform: rotate(180deg);
  }

  .About_Golime_Video_section_2_sc_text_video_images_img {
      width: 100%;
      height: 500px;
      display: none;
      object-fit: cover;
      border-radius: 24px;
  }
  .About_Golime_Video_section_2_sc_text_video_images_img_2 {
      width: 100%;
      height: 500px;
      display: none;
      object-fit: cover;
      border-radius: 24px;
  }
</style>
<section class="About_Golime_Video_section_2_sc_text">
  <div class="About_Golime_Video_section_2_sc_text_continer">
    <div class="About_Golime_Video_section_2_sc_text_flex">
      <div class="About_Golime_Video_section_2_sc_text_video_box">
        <div class="About_Golime_Video_section_2_sc_text_video">
          {% if section.settings.main_About_Golime_Video_section_2_vide_home_mn != blank %}
            <video
              src="{{ section.settings.main_About_Golime_Video_section_2_vide_home_mn.sources[1].url }}"
              autoplay
              muted
              loop
              playsinline
              class="About_Golime_Video_section_2_vide_home_mn"
              preload="auto"
              style="width: 100%;"
            ></video>
          {% endif %}
          {% if section.settings.main_sub_About_Golime_Video_section_2_sc_text_video_images_img != blank %}
            <img
              src="{{ section.settings.main_sub_About_Golime_Video_section_2_sc_text_video_images_img |img_url:'master'}}"
              alt=""
              class="About_Golime_Video_section_2_sc_text_video_images_img"
            >
          {% endif %}
          {% if section.settings.main_sub_About_Golime_Video_section_2_sc_text_video_images_img_2 != blank %}
            <img
              src="{{ section.settings.main_sub_About_Golime_Video_section_2_sc_text_video_images_img_2 |img_url:'master'}}"
              alt=""
              class="About_Golime_Video_section_2_sc_text_video_images_img_2"
            >
          {% endif %}
          <div
            class="About_Golime_Video_section_2_sc_text_video_images_button"
            style="background: none; border: none; padding: 0;"
          >
            {% if section.settings.main_About_Golime_Video_section_2_sc_text_video_images_button_img !=blank%}
            <img
              src="{{ section.settings.main_About_Golime_Video_section_2_sc_text_video_images_button_img |img_url:'master' }}"
              alt=""
              class="About_Golime_Video_section_2_sc_text_video_images_button_img"
            >
              {% endif %}
          </div>
        </div>
      </div>

      <div class="About_Golime_Video_section_2_sc_text_box">
        <div class="About_Golime_Video_section_2_content_sc_text_main">
          <div class="About_Golime_Video_section_2_accordion_header_text_title">
            <h2 class="About_Golime_Video_section_2_content_title">{{ section.settings.main_sub_About_Golime_Video_section_2_content_title }}</h2>
          </div>

          <div class="About_Golime_Video_section_2_accordion">
            {% for block in section.blocks %}
              <div class="About_Golime_Video_section_2_accordion_item">
                <div class="About_Golime_Video_section_2_accordion_header">
                  <h3 class="About_Golime_Video_section_2_accordion_header_title">{{ block.settings.main_sub_block-About_Golime_Video_section_2_accordion_header_title }}</h3>
                  <div class="About_Golime_Video_section_2_icon">
                    <i class="fa fa-chevron-down"></i>
                  </div>
                </div>
                <div class="About_Golime_Video_section_2_accordion_body">
                  <p>
                    {{ block.settings.main-Sub_para_About_Golime_Video_section_2_accordion_body }}
                  </p>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  if (toggleBtn && video) {
  toggleBtn.addEventListener("click", () => {
    if (video.paused) {
      video.play();
      toggleBtn.src = playIcon;
    } else {
      video.pause();
      toggleBtn.src = pauseIcon;
    }
  });
}
  const accordionItems = document.querySelectorAll('.About_Golime_Video_section_2_accordion_item');
  const video = document.querySelector('.About_Golime_Video_section_2_vide_home_mn');
  const toggleBtn = document.querySelector('.About_Golime_Video_section_2_sc_text_video_images_button_img');
  const img1 = document.querySelector('.About_Golime_Video_section_2_sc_text_video_images_img');
  const img2 = document.querySelector('.About_Golime_Video_section_2_sc_text_video_images_img_2');

  {% if section.settings.main_About_Go_Lime_section_2_video_sc_text_video_img2 %}
  const playIcon = '{{ section.settings.main_About_Go_Lime_section_2_video_sc_text_video_img2 |img_url:'master' }}';
  {% endif %}
  {% if section.settings.main_About_Go_Lime_section_2_video_sc_text_video_img1 %}
  const pauseIcon = '{{ section.settings.main_About_Go_Lime_section_2_video_sc_text_video_img1 |img_url:'master' }}';
  {% endif %}

  // ✅ Default: Pehla tab open (video)
  if (accordionItems.length > 0) {
    accordionItems[0].classList.add('active');
    video.style.display = 'block';
    toggleBtn.style.display = 'block';
    img1.style.display = 'none';
    img2.style.display = 'none';
  }

  accordionItems.forEach((item, index) => {
    const header = item.querySelector('.About_Golime_Video_section_2_accordion_header');

    header.addEventListener('click', () => {
      const isActive = item.classList.contains('active');

      accordionItems.forEach((i) => i.classList.remove('active'));

      if (!isActive) {
        item.classList.add('active');

        if (index === 0) {
          // Tab 1 → Video
          video.style.display = 'block';
          toggleBtn.style.display = 'block';
          img1.style.display = 'none';
          img2.style.display = 'none';
        } else if (index === 1) {
          // Tab 2 → Image 1
          video.style.display = 'none';
          toggleBtn.style.display = 'none';
          img1.style.display = 'block';
          img2.style.display = 'none';
        } else if (index === 2) {
          // Tab 3 → Image 2
          video.style.display = 'none';
          toggleBtn.style.display = 'none';
          img1.style.display = 'none';
          img2.style.display = 'block';
        }
      } else {
        // ✅ Jab tab band ho jaye to apna default view wapas
        if (index === 0) {
          video.style.display = 'block';
          toggleBtn.style.display = 'block';
          img1.style.display = 'none';
          img2.style.display = 'none';
        } else if (index === 1) {
          video.style.display = 'none';
          toggleBtn.style.display = 'none';
          img1.style.display = 'block';
          img2.style.display = 'none';
        } else if (index === 2) {
          video.style.display = 'none';
          toggleBtn.style.display = 'none';
          img1.style.display = 'none';
          img2.style.display = 'block';
        }
      }
    });
  });

  // ✅ Play / Pause Button
  toggleBtn.addEventListener('click', () => {
    if (video.paused) {
      video.play();
      toggleBtn.src = playIcon;
    } else {
      video.pause();
      toggleBtn.src = pauseIcon;
    }
  });
</script>

