                <div class="cfame-right-images-box">
                  {% if block.settings['cfame-right-images-box5'] != blank %}
                    <img
                      src="{{ block.settings.cfame-right-images-box5 |img_url: 'master' }}"
                      alt=""
                      class="cfame-right-images-box-img"
                    >
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      <div class="cfame-left-golime">
        <div class="faq-golime-box">
          {% for block in section.blocks %}
          {% case block.type %}
            {% when 'FAQs' %}
          <div class="faq-item-golime active" data-img="1">
            <div class="faq-item-golime-flex-icon-text">
              <h3>{{ block.settings.faq-content-golime-text }}</h3>
              <div class="faq-item-golime-flex-icon">
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="faq-content-golime">
              <p>
                {{ block.settings.faq-content-golime-para }}
              </p>
            </div>
          </div>
          <div class="faq-item-golime" data-img="2">
            <div class="faq-item-golime-flex-icon-text">
             <h3>{{ block.settings.faq-content-golime-text2 }}</h3>
              <div class="faq-item-golime-flex-icon">
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="faq-content-golime">
              <p>
                {{ block.settings.faq-content-golime-para2 }}
              </p>
            </div>
          </div>
          <div class="faq-item-golime" data-img="3">
            <div class="faq-item-golime-flex-icon-text">
             <h3>{{ block.settings.faq-content-golime-text3 }}</h3>
              <div class="faq-item-golime-flex-icon">
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="faq-content-golime">
              <p>
                {{ block.settings.faq-content-golime-para3 }}
              </p>
            </div>
          </div>
          <div class="faq-item-golime" data-img="4">
            <div class="faq-item-golime-flex-icon-text">
              <h3>{{ block.settings.faq-content-golime-text4 }}</h3>
              <div class="faq-item-golime-flex-icon">
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="faq-content-golime">
              <p>
                {{ block.settings.faq-content-golime-para4 }}
              </p>
            </div>
          </div>
          <div class="faq-item-golime" data-img="5">
            <div class="faq-item-golime-flex-icon-text">
              <h3>{{ block.settings.faq-content-golime-text5 }}</h3>
              <div class="faq-item-golime-flex-icon">
                <i class="fa-solid fa-chevron-down"></i>
              </div>
            </div>
            <div class="faq-content-golime">
              <p>
                {{ block.settings.faq-content-golime-para5 }}
              </p>
            </div>
          </div>
          {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqItems = document.querySelectorAll('.faq-item-golime');
    const imageBoxes = document.querySelectorAll('.cfame-right-images-box-sub-golime');

    let currentImageIndex = 0;

    // Default: Pehla FAQ & image
    if (faqItems.length > 0 && imageBoxes.length > 0) {
      faqItems[0].classList.add('active');
      imageBoxes[0].classList.add('active');
      currentImageIndex = 0;
    }

    faqItems.forEach((item) => {
      item.addEventListener('click', function () {
        const index = parseInt(item.getAttribute('data-img')) - 1;

        if (item.classList.contains('active')) {
          item.classList.remove('active');
          return;
        }

        // Sab FAQs close karo
        faqItems.forEach((el) => el.classList.remove('active'));
        item.classList.add('active');

        if (index === currentImageIndex) return;

        // Purani image ko exit state do
        imageBoxes[currentImageIndex].classList.remove('active');
        imageBoxes[currentImageIndex].classList.add('exit');

        // Nayi image ko entry state do
        imageBoxes[index].classList.remove('exit');
        imageBoxes[index].classList.add('active');

        currentImageIndex = index;
      });
    });
  });
</script>
