<style>
 .cfame-section-golime {
    /* padding: 50px 20px; */
    padding: 40px 0;
}

  .cfame-container-golime {
      width: 100%;
      max-width: 1277px;
      padding: 0 20px;
      margin: 0 auto;
  }

  .faq-item-golime-flex-icon-text h3 {
    font-weight: 700;
}

  .cfame-row-golime {
      display: flex;
      flex-direction: row-reverse;
      justify-content: space-between;
      gap: 20px;
  }

  /* Left Side FAQ */
  .cfame-left-golime {
      width: 48%;
  }

  .faq-golime-box {
      display: flex;
      flex-direction: column;
  }

  .faq-item-golime {
      padding: 0px 16px;
      cursor: pointer;
      border-radius: 14px;
      margin: 12px 0;
      background: #f9f7f2;
      transition: background 0.3s ease;
  }

  .faq-item-golime:hover {
      background: #f0eade;
  }

  .faq-item-golime h3 {
      font-size: 20px;
      color: #454545;
      letter-spacing: 0;
  }

  .faq-item-golime-flex-icon-text {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }

  .faq-item-golime-flex-icon {
      width: 30px;
      height: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f0eade;
      border-radius: 50%;
  }

  .faq-item-golime-flex-icon i {
      transition: transform 0.3s ease;
  }

  .faq-item-golime.active .faq-item-golime-flex-icon i {
      transform: rotate(180deg);
  }

  /* FAQ Content Animation */
  .faq-content-golime {
      font-size: 16px;
      color: #454545;
      line-height: 1.4;
      display: none;
      opacity: 0;
      transform: translateY(-5px);
      transition: opacity 0.4s ease, transform 0.4s ease;
      padding-top: 14px;
  }

  .faq-item-golime.active .faq-content-golime {
      display: block;
      opacity: 1;
      transform: translateY(0);
  }

  /* Right Side Images */
  .cfame-right-golime {
      width: 48%;
  }
  /* Default hidden state: start from left */
  .cfame-right-images-box-sub-golime {
    opacity: 0;
    transform: translateX(-30px); /* left se aaye */
    transition: opacity 0.5s ease, transform 0.5s ease;
    display: none;
  }

  /* Active state: move to center */
  .cfame-right-images-box-sub-golime.active {
    opacity: 1;
    transform: translateX(0);
    display: block;
  }



  .cfame-right-images-box-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 24px;
  }

  /* Top section */
  .cfame-topdata-golime {
      margin-bottom: 85px;
      text-align: center;
  }

  .cfame-topdata-title-golime {
      font-size: 36px;
    color: #454545;
    line-height: 1.2;
    font-weight: 600;
      max-width: 700px;
      margin: 0 auto 20px;
  }

  .cfame-topdata-paradiv-golime {
      max-width: 700px;
      margin: 0 auto;
      color: #454545;
      line-height: 22px;
  }
</style>
<section class="cfame-section-golime">
  <div class="cfame-container-golime">
    <div class="cfame-topdata-golime">
      <div class="cfame-topdata-titlediv-golime">
        <h2 class="cfame-topdata-title-golime">{{ section.settings.cfame-topdata-title-golime-text }}</h2>
      </div>
      <div class="cfame-topdata-paradiv-golime">
        <p>
          {{ section.settings.cfame-topdata-paradiv-golime-para }}
        </p>
      </div>
    </div>

    <div class="cfame-row-golime">
      <div class="cfame-right-golime">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'Images' %}
              <div class="cfame-right-images-box-sub-golime active">
                <div class="cfame-right-images-box">
                  {% if block.settings['cfame-right-images-box1'] != blank %}
                    <img
                      src="{{ block.settings.cfame-right-images-box1 |img_url: 'master' }}"
                      alt=""
                      class="cfame-right-images-box-img"
                    >
                  {% endif %}
                </div>
              </div>
              <div class="cfame-right-images-box-sub-golime">
                <div class="cfame-right-images-box">
                  {% if block.settings['cfame-right-images-box2'] != blank %}
